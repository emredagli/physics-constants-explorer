{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "method",
        "dimensional_constants",
        "dimensionless_constants"
    ],
    "additionalProperties": false,
    "properties": {
        "method": {
            "enum": ["brute_force", "brute_force_with_memorization"],
            "additionalProperties": false
        },
        "dimensional_constants": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {"$ref": "#/$defs/power_values"}
        },
        "dimensionless_constants": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {"$ref": "#/$defs/power_values"}
        }
    },
    "$defs": {
        "power_values": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "range": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 2,
                            "maxItems": 2
                        },
                        "step": {
                           "type": "string",
                           "pattern": "^[\\d/]+$"
                        },
                        "additionalProperties": false
                    }
                },
                {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    },
                    "minItems": 2,
                    "maxItems": 2
                }, {
                    "type": "integer",
                    "minimum": 1
                }
            ]
        }
    }
}